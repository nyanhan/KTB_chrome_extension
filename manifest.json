{
  "name": "KANTUBAN.COM",
  "version": "0.4.0",
  "manifest_version": 2,

  "icons": {
    "128": "icons/icon128.png",
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
  },

  "description": "看图班・最专业的旅行相册",
  "browser_action": {
    "default_icon": {
      "19": "icons/icon19.png",
      "38": "icons/icon38.png"
    },
    "default_title": "看图班",
    "default_popup": "popup.html"
  },

  "permissions": [
    "cookies",
    "tabs",
    "http://*/*",
    "https://*/*",
    "contextMenus",
    "alarms"
  ],

  "background": {
    "scripts": ["js/event_page.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/tools/CSSOM.js", "js/tools/Request.js", "js/frames.js", "js/tools/Q.js", "js/document_analyse.js"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/tools/Upload.js", "js/tools/crop.js", "js/top.js", "js/page_context.js", "js/capture_page.js"],
      "run_at": "document_end"
    }
  ],

  "options_page": "preferences.html",
  "web_accessible_resources": ["css/capture_page.css"]
}